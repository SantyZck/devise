<div class="container p-4">
	<div class="row">
		{{#each todos}}
			<div class="col-md-3">
				<div class="card text-center">
					<div class="card-body">
							<h3 class="card-title text-uppercase">
								{{content}}
							</h3>
						<p>{{timeago created_at}}</p>
						<a href="/todos/delete/{{id}}" class="btn btn-outline-danger btn-sm">Delete</a>
					</div>
				</div>
			</div>
			{{else}}
			<div class="col-md-4 mx-auto">
				<div class="card card-body text-center">
					<p>There are not todos saved yet.</p>
					<a href="/todos/add">Create one!</a>
				</div>
			</div>
		{{/each}}

	</div>
</div>

